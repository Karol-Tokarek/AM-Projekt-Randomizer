<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="392dp"
        android:layout_height="136dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonGeneratePassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/checkBoxCyfry"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:text="Cyfry"
            android:textColor="@color/white"
            app:layout_column="0"
            app:layout_row="2" />

        <CheckBox
            android:id="@+id/checkBoxlitery"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:text="Małe litery"
            android:textColor="@color/white"
            app:layout_column="1"
            app:layout_row="1" />

        <CheckBox
            android:id="@+id/checkBoxZnaki"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:text="Znaki specjalne"
            android:textColor="@color/white"
            app:layout_column="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="187dp"
            android:layout_height="47dp"
            android:text="Ile znaków?:"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="0"
            app:layout_row="0" />

        <Spinner
            android:id="@+id/spinnerHowMuchSize"
            android:layout_width="203dp"
            android:layout_height="48dp"
            android:popupBackground="#0F9D58"
            app:layout_column="1"
            app:layout_row="0" />

        <CheckBox
            android:id="@+id/checkBoxLITERY"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:text="duże litery"
            android:textColor="@color/white"
            app:layout_column="0"
            app:layout_row="1" />
    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/buttonGeneratePassword"
        android:layout_width="353dp"
        android:layout_height="65dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="521dp"
        android:backgroundTint="#0F9D58"
        android:text="GENERUJ HASŁO !"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout3" />

    <TextView
        android:id="@+id/textViewDisplayPass"
        android:layout_width="382dp"
        android:layout_height="133dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="311dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGeneratePassword" />
</androidx.constraintlayout.widget.ConstraintLayout>