<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LiteryActivity">

  <TextView
      android:id="@+id/textView"
      android:layout_width="208dp"
      android:layout_height="32dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="27dp"
      android:layout_marginBottom="672dp"
      android:text="WYBIERZ ALFABET"
      android:textColor="@color/white"
      android:textSize="24sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/spinnerSetAlphabet"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Spinner
      android:id="@+id/spinnerSetAlphabet"
      android:layout_width="165dp"
      android:layout_height="48dp"
      android:layout_marginTop="27dp"
      android:layout_marginEnd="22dp"
      android:layout_marginBottom="673dp"
      android:contentDescription="@string/appbar_scrolling_view_behavior"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/textView"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/buttonGenerateLetter"
      android:layout_width="384dp"
      android:layout_height="77dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="11dp"
      android:layout_marginBottom="14dp"
      android:backgroundTint="#0F9D58"
      android:text="GENERUJ LITERKÄ˜ !"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/textViewDisplayLetter"
      android:layout_width="190dp"
      android:layout_height="375dp"
      android:layout_marginStart="110dp"
      android:layout_marginTop="216dp"
      android:layout_marginEnd="111dp"
      android:layout_marginBottom="18dp"
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="80sp"
      android:textStyle="bold|italic"
      app:layout_constraintBottom_toTopOf="@+id/buttonGenerateLetter"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/spinnerSetAlphabet" />
</androidx.constraintlayout.widget.ConstraintLayout>