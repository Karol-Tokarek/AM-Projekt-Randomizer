<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YesOrNotActivity">

    <Button
        android:id="@+id/buttonGenerateYesorNot"
        android:layout_width="304dp"
        android:layout_height="117dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="#0F9D58"
        android:text="TAK? CZY NIE? - GENERUJ!"
        android:textColorHint="@color/purple_500"
        app:layout_constraintBottom_toTopOf="@+id/imageViewDisplayYesorNot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewDisplayYesorNot"
        android:layout_width="310dp"
        android:layout_height="304dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="233dp"
        android:background="@drawable/tak"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGenerateYesorNot"
        tools:srcCompat="@drawable/tak" />
</androidx.constraintlayout.widget.ConstraintLayout>